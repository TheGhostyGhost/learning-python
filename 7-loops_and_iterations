nums = [1, 2, 3, 4, 5]

# for loop
for num in nums:
    print(num)

# look for certain value 
for num in nums:
    if num == 3:
        print("Found!")
        break # end loops
    print(num)

for num in nums:
    if num == 3:
        print("Found!")
        continue # continues the loop
    print(num)

# loop within a loop
for num in nums:
    for letter in "abc":
        print(num, letter)

# loop a certain numer of times with range()
for i in range(10):
    print(i)

for i in range(1, 11): # start and end
    print(i)

# while loop
x = 0
while x < 10:
    print(x)
    x += 1 # increment x

x = 0
while x < 10:
    if x == 5:
        break
    print(x)
    x += 1 # increment x

x = 0
while True:
    if x == 5:
        break
    print(x)
    x += 1 